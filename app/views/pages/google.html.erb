
<div id="google-body">
    <header id="g-header">
        <ul id="g-nav-right">
            <li><a href="#">Gmail</a></li>
            <li><a href="#">Images</a></li>
            <li><input type="button" id="g-sign-in" value="Sign In" /></li>
        </ul>

        <script type="text/javascript">
            function focusIt()
            {
                var my_search_box = document.getElementById("search-box");
                my_search_box.focus();
            }
            onload = focusIt;
        </script>

    </header>

    <div id="g-content">
        <div id="g-logo">
            <div class="g-lpic"><%= image_tag("googlelogo.png", :alt => "google logo", :width => "290") %></div>

            <div id="g-search">
                <div id="g-search-outline">
                    <input id="g-searchbar" type="text" name="search" />
                </div>
            </div>

            <div class="g-search-button">
                <input class="g-buttons" type="button" value="Google Search" />
                <input class="g-buttons" type="button" value="I'm feeling lucky!" />
            </div>
        </div>


        <footer id="g-footer">
            <ul id="g-left-footer">
                <li><a href="#">Advertising</a></li>
                <li><a href="#">Business</a></li>
                <li><a href="#">About</a></li>
            </ul>

            <ul id="footer-right">
                <li><a href="#">Privacy</a></li>
                <li><a href="#">Terms</a></li>
                <li><a href="#">Settings</a></li>
            </ul>
        </footer>
    </div>
